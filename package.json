{
  "name": "crossword-generator",
  "version": "1.0.0",
  "description": "Modern Italian crossword generator with enhanced UI/UX",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test/api.test.js",
    "build": "echo \"Static files build complete\"",
    "generate": "python3 simple_crossword.py",
    "docker:build": "docker build -t crossword-generator .",
    "docker:run": "docker run -p 3000:3000 crossword-generator",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose --profile production up --build"
  },
  "keywords": [
    "crossword",
    "puzzle",
    "italian",
    "game",
    "generator",
    "ui",
    "responsive",
    "docker"
  ],
  "author": "Crossword Generator Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabriziosalmi/crosswords.git"
  },
  "bugs": {
    "url": "https://github.com/fabriziosalmi/crosswords/issues"
  },
  "homepage": "https://github.com/fabriziosalmi/crosswords#readme"
}
