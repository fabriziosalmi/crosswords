# Crossword Generator Environment Configuration
# Copy this file to .env and modify as needed

# Application Settings
NODE_ENV=production
PORT=3000

# Application Configuration
CROSSWORD_GRID_SIZE=15
CROSSWORD_MAX_WORDS=12
CROSSWORD_THEME=general
CROSSWORD_LANGUAGE=italian

# Security Settings (for production)
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Database Configuration (if adding database support in future)
DATABASE_URL=postgresql://user:password@localhost:5432/crosswords
REDIS_URL=redis://localhost:6379

# External Services (if needed)
# OPENAI_API_KEY=your_openai_api_key
# LANGCHAIN_API_KEY=your_langchain_api_key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/certs/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance Tuning
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65

# Feature Flags
FEATURE_PYTHON_GENERATOR=true
FEATURE_MULTIPLAYER=false
FEATURE_USER_ACCOUNTS=false
FEATURE_PREMIUM_CONTENT=false

# Development Settings (only for development)
HOT_RELOAD=false
DEBUG_MODE=false
MOCK_EXTERNAL_SERVICES=false
